<body style="color: black;">
    <h3><a class="btn btn-secondary" href="/employee"><i class="fa fa-plus"></i> Create New</a> Member List</h3>
 <div class="outer-wrapper">
    <div class="table-wrapper">
<table class="table table-striped table-bordered table-condensed table-fixed col-xs-7">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Surname</th>
            <th>Popular Name</th>
            <th>Gender</th>
            <th>DOB</th>
            <th>Day Born</th>
            <th>Home Town</th>
            <th>Region</th>
            <th>Residence</th>
            <th>House No.</th>
            <th>Occupation</th>
            <th>Sunday School Class</th>
            <th>Contact</th>
            <th>Email</th>
            {{!-- <th>Mobile</th>
            <th>City</th> --}}
            <th>Tithe Card?</th>
            <th>Tithe Card NO.</th>
            <th>Spouse Member ?</th>
            <th>SpouseID</th>
            <th>Spouse Name</th>
            <th>Spouse Occupation</th>
            <th>Spouse Contact</th>
            <th>Baptised By</th>
            <th>Church</th>
            <th>Location</th>
            <th>Cert. NO.</th>
            <th>Date Baptised</th>
            <th>Membership Year</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.fullName}}</td>
            <td>{{this.surname}}</td>
            <td>{{this.popularName}}</td>
            <td>{{this.gender}}</td>
            <td>{{this.dob}}</td>
            <td>{{this.dayBorn}}</td>
            <td>{{this.homeTown}}</td>
            <td>{{this.region}}</td>
            <td>{{this.residence}}</td>
            <td>{{this.houseNumber}}</td>
            <td>{{this.occupation}}</td>
            <td>{{this.schoolClass}}</td>
            <td>{{this.mobNum}}</td>
            <td>{{this.email}}</td>
            {{!-- <td>{{this.mobile}}</td>
            <td>{{this.city}}</td> --}}
            <td>{{this.tithe}}</td>
            <td>{{this.titheNum}}</td>
            <td>{{this.spouseMember}}</td>
            <td>{{this.spouseID}}</td>
            <td>{{this.spouseName}}</td>
            <td>{{this.spouseOccupation}}</td>
            <td>{{this.spouseCont}}</td>
            <td>{{this.baptBy}}</td>
            <td>{{this.church}}</td>
            <td>{{this.location}}</td>
            <td>{{this.certNo}}</td>
            <td>{{this.dateBapt}}</td>
            <td>{{this.memberYear}}</td>

            <td>
                <a href="/employee/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>
</div>
</body>